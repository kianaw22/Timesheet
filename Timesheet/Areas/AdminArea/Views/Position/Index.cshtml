@model IEnumerable<Timesheet.Models.Entities.Admin.Position>
@{
    ViewData["Title"] = "Index";
}
<div class="content">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">خانه</a></li>
            <li class="breadcrumb-item active" aria-current="page">سمت ها</li>
        </ol>
    </nav>
    <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 gray; border-radius:2px;">
        <span style="font-weight:bold;">
            <i class="glyphicon glyphicon-list"></i>
            لیست سمت ها
        </span>
    </div>
    <div style="margin-bottom:5px;">
        <a class="btn customGreen1" asp-controller="ProjectServices" asp-action="AddProjectServices">
            <i class="glyphicon glyphicon-plus"></i>
           اضافه کردن سمت
        </a>
    </div>


    <div>
        <div id="grid"></div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
           var myobj = '@Html.Raw(Json.Serialize(Model))';
            var jsondata = JSON.parse(myobj);
            

            $("#grid").kendoGrid({
                dataSource: {
                    data: jsondata,
                    pageSize: jsondata.length
                },
                height: 550,
                filterable: true,
                groupable: true,
                sortable: true,
                toolbar: ["pdf", "search","excel"],

                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                columns: [{
                    field: "id",
                    title: "id"
                }, {
                    field: "userName",
                    width: 150,
                    title: "UserName"
                }, {
                    field: "positionType",
                    width: 150,

                    title: "Position Type"
                },{
                    field: "positionName",
                    width: 150,
                    title: "PositionName"
                },{
                    field: "formula",
                    width: 150,
                    title: "Formula"
                },



                    {
                        command: [
                            {
                                name: "del",
                                text: "Delete",
                                click: function (e) {
                                 
                                    var item = this.dataItem($(e.currentTarget).closest("tr"));
                                    url = "/TimeSheet/Position/DeletePosition";
                                    $.ajax({
                                        url: url,
                                        data: { id: item.id },
                                        type: 'Get',
                                        success: function (result) {
                                            $('#DeleteModalBody').html(result);
                                            $("#myModaldeletor").modal("show");
                                        },
                                        error: function (xhr, status) {
                                            alert(status);
                                        }
                                    });
                                }
                            },
                            {
                                name: "edit",
                                text: "Edit",
                                click: function (e) {
                                  
                                    var item = this.dataItem($(e.currentTarget).closest("tr"));
                                    console.log(item )
                                    window.location.href = '@Url.Action("EditPosition", "Position")/' + item.id;
                                }
                            },

                        ]
                    }
                ]

            });
            var grid = $("#grid").data("kendoGrid");
            grid.hideColumn("id");

       

        });


    </script>
}