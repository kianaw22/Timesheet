@model Timesheet.Models.ViewModels.Admin.PositionViewModel
@using Timesheet.Models.Entities

@{
    ViewData["Title"] = "Add Position";
    var UsersList = ViewBag.user;
}



<div class="panel panel-body container-fluid" style="border-radius: 2px; box-shadow: 3px 1px 1px 0 gray; background-color: #e6e2e2;">
    <form asp-controller="Position" asp-action="AddPosition" method="post">
        <div class="col-md-6 col-md-offset-3">
            <!-- UserId (Dropdown for selecting user) -->
            <div class="form-group">
                <label asp-for="UserId" class="control-label col-md-3 col-xs-12"></label>
                <select asp-for="UserId" class="form-control">
                    <option value="">-- انتخاب یوزر --</option>
                    @foreach (var user in ViewBag.user)
                    {
                        <option value="@user.Id">@user.FullName</option>
                    }
                </select>
            </div>

            <!-- UserName (Read-only field that auto-fills based on UserId) -->
            <div class="form-group">
                <label asp-for="UserName" class="control-label col-md-3 col-xs-12"></label>
                <div class="col-md-9 col-xs-12">
                    <input asp-for="UserName" type="text" class="form-control custominput" placeholder="یوزرنیم" readonly />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <!-- PositionType -->
            <div class="form-group">
                <label asp-for="PositionType" class="control-label col-md-3 col-xs-12"></label>
                <div class="col-md-9 col-xs-12">
                    <select asp-for="PositionType" class="form-control custominput">
                        <option value="">-- انتخاب نوع سمت --</option>
                        <option value="Manager">مدیر</option>
                        <option value="Developer">توسعه‌دهنده</option>
                        <option value="Analyst">تحلیلگر</option>
                        <!-- Add more options as needed -->
                    </select>
                    <span asp-validation-for="PositionType" class="text-danger"></span>
                </div>
            </div>

            <!-- PostionName -->
            <div class="form-group">
                <label asp-for="PostionName" class="control-label col-md-3 col-xs-12"></label>
                <div class="col-md-9 col-xs-12">
                    <input asp-for="PostionName" type="text" class="form-control custominput" placeholder="نام سمت" />
                    <span asp-validation-for="PostionName" class="text-danger"></span>
                </div>
            </div>

            <!-- Formula -->
            <div class="form-group">
                <label asp-for="Formula" class="control-label col-md-3 col-xs-12"></label>
                <div class="col-md-9 col-xs-12">
                    <input asp-for="Formula" type="text" class="form-control custominput" placeholder="فرمول" />
                    <span asp-validation-for="Formula" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-primary">ارسال</button>
                </div>
            </div>
        </div>
    </form>
</div>



